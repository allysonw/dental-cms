<div class="w3-container w3-padding-16" style="background: rgba(255,255,255,0.85);">

  <h2>Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w3-input", placeholder: "E-mail" %>
    </div><br>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "w3-input", placeholder: "Password" %>
    </div>

    <div>
      <%= f.button "Sign In", class: "w3-margin-right w3-button w3-pink w3-hover-blue w3-medium w3-round-large w3-margin-top" %>
      <%= link_to "Sign Up", new_registration_path(resource_name), class: "w3-button w3-pink w3-hover-blue w3-medium w3-round-large w3-margin-top" %>
    </div>
  <% end %><br>

  <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, :facebook) %><br>
  <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, :google_oauth2) %>
  <!-- <%= render "devise/shared/links" %> -->
</div>
