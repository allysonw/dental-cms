<div class="w3-container w3-padding-16" style="background: rgba(255,255,255,0.85);">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "w3-input" %>
    </div><br>

    <div class="field">
      <%= f.email_field :email, autocomplete: "email", placeholder: "E-mail", class: "w3-input" %>
    </div><br>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "w3-input" %>
    </div><br>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-type Password", class: "w3-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up", class: "w3-button w3-pink w3-medium w3-round-large w3-margin-top w3-hover-blue w3-margin-top w3-margin-right" %>
    </div>

  <% end %><br>

  <%= link_to "Sign In", new_user_session_path %><br>
  <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, :facebook) %><br>
  <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, :google_oauth2) %>

</div>
