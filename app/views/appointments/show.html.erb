<div class="w3-panel">
  <div class="w3-row-padding w3-margin-bottom" style="margin:0 -16px">
    <div class="w3-third">
      <div class="w3-container w3-red w3-padding-16">
        <h3>Appointment Detail</h3>
        <%= render partial: 'appointments/appointment', locals: { appointment: @appointment } %>
      </div>
    </div>
    <div class="w3-panel">
      <div class="w3-twothird">
        <h3>Notes</h3>
        <%= form_for @appointment_note, url: appointment_appointment_notes_path(@appointment.id) do |f| %>
          <%= f.text_field :content, class: "w3-input w3-threequarter  w3-margin-top", placeholder: "Note Content" %>
          <%= f.hidden_field :appointment_id, value: @appointment.id %>
          <%= f.submit "Create Note", class: "w3-margin-left  w3-margin-top w3-button w3-medium w3-black w3-hover-pink w3-round-large w3-padding-medium" %>
        <% end %>
      </div>
    </div>

    <div class="w3-panel w3-twothird">
      <table class="w3-table w3-striped w3-white">
        <thead class='w3-grey w3-text-white'>
          <th></th>
          <th>Note</th>
          <th>Created At</th>
        </thead>
        <tbody>
        <% @appointment.appointment_notes.each do |note| %>
          <tr>
            <td><i class="material-icons" style="font-size: 24px;">description</i></td>
            <td><%= note.content %></td>
            <td><%= created_at(note) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
