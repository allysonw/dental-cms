<div class="w3-container">
    <%= form_tag(appointments_path, method: "get") do %>

      <div style="margin-top: 10px;">
        <%= select_tag "user", options_from_collection_for_select(@users, "id", "name", @user_id), :prompt => "All Doctors", :style => "width: 200px; margin-right: 10px;" %>

        <%= select_tag "patient", options_from_collection_for_select(@patients, "id", "name", @patient_id), :prompt => "All Patients", :style => "width: 200px; margin-right: 10px; margin-bottom: 10px;" %>

        <%= submit_tag "Filter", :style => "margin-top: -3px;", :class => "w3-button w3-small w3-black w3-hover-pink w3-round-large w3-padding-small" %>
      </div>


    <div style="margin-bottom: 10px">
      Filtered for:
        <%= @user? @user.name : "all doctors" %> -
        <%= @patient? @patient.name : "all patients" %>
    </div>

    <% end %>
</div>

<div class="w3-container w3-responsive">

  <%= display_appointments_list(@appointments) %>

  <div class="new-button-div">
    <%= link_to "New Appointment", new_appointment_path, class: "w3-button w3-medium w3-black w3-hover-pink w3-round-large w3-padding-medium" %>
  </div>
</div>
