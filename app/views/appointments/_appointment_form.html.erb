<%= form_for @appointment do |f| %>
  <p>
    <%= f.label :time %>
    <%= f.datetime_select :time %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location, required: true %>
  </p>
  <p>
    <%= f.label :user, "Doctor" %>
    <%= f.collection_select(:user_id, User.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :patient %>
    <%= f.collection_select(:patient_id, Patient.all, :id, :name) %>
  </p>
  <%= f.submit %>
<% end %>
