
<div class="w3-row-padding w3-responsive">
  <div>
    <table class="w3-table w3-striped w3-white">
      <thead class='w3-grey w3-text-white'>
        <tr>
          <th></th>
          <th>Date & Time </th>
          <th>Location</th>
          <th>Patient</th>
          <th>Doctor</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><i class="fa fa-bell w3-text-green w3-large"></i>
            <td><%= link_to date_and_time(appointment), appointment_path(appointment) %></a></td>
            <td><%= appointment.location %></td>
            <td><%= link_to appointment.patient.name, patient_path(appointment.patient) %></td>
            <td><%= appointment.user.name %></td>

            <td>
              <%= link_to "Edit", edit_appointment_path(appointment), class: "right-margin-btn btn btn-primary btn-sm" %>

              <%= link_to "Delete", appointment, method: :delete, data: { confirm: "Are you sure you would like to delete this appointment?" }, class: "right-margin-btn btn btn-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
